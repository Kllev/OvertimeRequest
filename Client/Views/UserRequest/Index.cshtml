@{
    Layout = "~/Views/Shared/Template/_Layout.cshtml";
}
<script>
    var userId = '@ViewBag.userId';
    var email = '@ViewBag.email';
</script>
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <p class="h1 col-8">Requester</p>
            </div>
        </div>
        <div class="card-body">
            <table id="tableClient" class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>RequestId</th>
                        <th>EmployeeId</th>
                        <th>EmployeeName</th>
                        <th>RequestDate</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!--Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="test2">DETAIL DATA</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="data">
                    <table id="tableDetail" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>UserId</th>
                                <th>JobTask</th>
                                <th>Date</th>
                                <th>StartTime</th>
                                <th>EndTime</th>
                                <th>Time</th>
                                <th>Desc</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnapprove" type="button" class="btn btn-success">Approve</button>
                <button id="btndecline" type="button" class="btn btn-danger">Decline</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/UserRequest.js"></script>
}
